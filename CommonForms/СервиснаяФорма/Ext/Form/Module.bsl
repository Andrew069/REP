Процедура ПриОткрытии(Отказ)
	Этап = ПроверкаЭтапаАвторизации();	
	Если Этап > 0 Тогда
		мПараметры = Новый Структура;
		мПараметры.Вставить("Этап",Этап);
		ОткрытьФорму("ОбщаяФорма.ФормаАвторизации",мПараметры);
	Иначе
		Сообщить("Привет");
		ОткрытьФорму("ОбщаяФорма.РабочийСтол", Новый Структура("ТекущийЭтап"));
	КонецЕсли;	                               
